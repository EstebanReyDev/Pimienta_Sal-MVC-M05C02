<!DOCTYPE html>
<html>
  <head>
    <title>Pimienta & sal</title>
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    
    <%- include('./partials/nav') %>

    <%- include("./partials/header") %>

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <img
            src="/images/principal.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="SAbores que enamoran"
            width="600"
            height="750"
          />
        </div>

        <div class="ps-col m6 ps-padding-large">
          <h1 class="ps-center"><%- about[0].titulo %></h1>
          <br />
          <p class="ps-large">
            <%- about[0].lorem1 %>
            <span class="ps-tag ps-light-grey">seasonal</span> ingredients.
          </p>
          <p class="ps-large ps-text-grey ps-hide-medium">
            <%- about[0].lorem2 %>
          </p>
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <h1 class="ps-center">Nuentro Menu</h1>
        <div class="products">
          <% products.forEach(product => { %>
            <div class="ps-col l6 ps-padding-large">
              <br />
              <h4><%-product.nombre%></h4>
              <p class="ps-text-grey">
                <%-product.descripcion%>
              </p>
              <a href="/menuDetail/<%-product.id%>">Ver Mas</a>
              <br />
            </div>
          <% }) %>
        </div>        
        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <%- include('./partials/footer') %>
    </div>
  </body>
</html>
